#!/usr/bin/env ruby

require 'bundler/setup'
require 'evolvable_sound'

# You can add fixtures and/or initialization code here to make experimenting
# with your gem easier. You can also use a different console, if you like.

# (If you use this, don't forget to add pry to your Gemfile!)
# require "pry"
# Pry.start

require 'irb'

mutation = Evolvable::Mutation.new(rate: 0.2)
population = EvolvableSound.evolvable_population(size: 10, mutation: mutation, log_progress: true)
population.evolve!(fitness_goal: 10, generations_count: 10_000)

IRB.start(__FILE__)
